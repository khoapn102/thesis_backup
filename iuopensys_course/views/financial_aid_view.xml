<?xml version="1.0" ?>
<openerp>
	<data>
		<record model="ir.actions.act_window" id="financial_aid_main_action">
			<field name="name">Financial Aid Options</field>
			<field name="res_model">financial.aid</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<record id="financial_aid_tree_view" model="ir.ui.view">
			<field name="name">Financial Aid Options</field>
			<field name="model">financial.aid</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="finance_type"/>
					<field name="finance_value"/>
					<field name="description"/>							
				</tree>
			</field>
		</record>
		
		<record id="financial_aid_form_view" model="ir.ui.view">
			<field name="name">Finacial Options</field>
			<field name="model">financial.aid</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>					
					<sheet>
						<div class="oe_button_box" name="button_box">
                            <button name="toggle_active_opt" type="object" class="oe_stat_button" icon="fa-check">
                                <field name="is_active" widget="boolean_button" options='{"terminology": "active"}'/>
                            </button>
                        </div>
						<div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name"/>
                            <h1>
                            	<field name="name" required="1" class="oe_inline" style="width:100%%"/>
                            </h1>
                        </div>
                        <group string="General Information">
                        	<group>
                        		<field name="description"/>
                        		<field name="start_date"/>
                        		<field name="end_date"/>
                        	</group>
                        	<group>
                        		<field name="finance_type"/>
                        		<field name="finance_value"/>
                        		<field name="note"/>
                        	</group>
                        </group>
                        <group string="List of Students">
                        	<field name="student_ids" nolabel="1" context="{'default_financial_aid_id':active_id'}"/>
                        </group>						
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Search View -->
		<record id="financial_aid_search_view" model="ir.ui.view">
			<field name="name">Search View</field>
			<field name="model">financial.aid</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search>
					<!--Search By -->
					<field name="name"/>
					
					<!--Group By -->
					<group string="Group By" expand="0">
						<filter name="group_by_finance_typ" string="Type"
							context="{'group_by': 'finance_type'}"/>
						<filter name="group_by_finance_value" string="Value"
							context="{'group_by':'finance_value'}"/>
						<filter name="group_by_start_date" string="Start Date"
							context="{'group_by':'start_date'}"/>
						<filter name="group_by_end_date" string="End Date"
							context="{'group_by':'end_date'}"/>
					</group>
				</search>
			</field>
		</record>
	</data>
</openerp>