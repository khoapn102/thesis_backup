<?xml version="1.0" ?>
<openerp>
	<data>
		
		<!-- Student Semester Transcript Part -->
		<record id="student_semester_tree_view" model="ir.ui.view">
			<field name="name">Semester Academic Management</field>
			<field name="model">student.semester</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="student_id"/>
					<field name="semester_id"/>
					<field name="average_gpa"/>							
				</tree>
			</field>
		</record>
		
		<record id="student_semester_form_view" model="ir.ui.view">
			<field name="name">Semester</field>
			<field name="model">student.semester</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>					
					<sheet>
						<group string="Information">
							<group>
								<field name="student_id"/>
								<field name="calculate_gpa" groups="iuopensys_core.group_staff"/>
							</group>
							<group>
								<field name="user_id" invisible="1"/>
								<field name="semester_id"/>
								
							</group>
						</group>
						<group string="Semester Grade">
							<group>
								<field name="average_gpa"/>
								<field name="total_credits"/>
							</group>
							<group>
								<field name="achieved_credits"/>
								<field name="no_count_credits"/>
							</group>
						</group>
						<group string="Registered Courses">
							<field name="student_course_ids" nolabel="1">
								<tree edit="false" create="false" delete="false">
									<field name="course_code" string="Code"/>
               						<field name="course_name"/>
               						<field name="course_credits" string="Crds"/>
               						<field name="assignment_percent"/>
               						<field name="mid_exam_percent"/>
               						<field name="final_exam_percent"/>
               						<field name="assignment_score" string="Assignment"/>               						
               						<field name="mid_score" string="Midterm"/>
               						<field name="final_score" string="Final"/>
               						<field name="course_gpa" string="Crs GPA"/>
               						<field name="letter_grade" string="Letter Grd"/>
								</tree>
							</field>							
						</group>					
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Action -->
		<record model="ir.actions.act_window" id="student_semester_main_action">
			<field name="name">Semester Academic Managment</field>
			<field name="res_model">student.semester</field>
			<field name="view_mode">tree,form</field>
		</record>
		<record model="ir.actions.act_window.view" id="student_semester_main_tree_view">
			<field name="sequence" eval="1"/>
			<field name="name">Semester Academic Management</field>
			<field name="res_model">student.semester</field>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="student_semester_tree_view"/>
			<field name="act_window_id" ref="student_semester_main_action"/>
		</record>
		<record model="ir.actions.act_window.view" id="student_semester_main_form_view">
			<field name="sequence" eval="2"/>
			<field name="name">Semester Transcript</field>
			<field name="res_model">student.semester</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="student_semester_form_view"/>
			<field name="act_window_id" ref="student_semester_main_action"/>
		</record>
		
		<!-- Student Behavior Point Semester Part -->
		<record id="student_semester_behavior_point_tree_view" model="ir.ui.view">
			<field name="name">Behavior Point Systems</field>
			<field name="model">student.semester</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="student_id"/>
					<field name="semester_id"/>
					<field name="total_score"/>
					<field name="academic_status"/>							
				</tree>
			</field>
		</record>
		
		<record id="student_semester_behavior_point_form_view" model="ir.ui.view">
			<field name="name">Student Behavior Point</field>
			<field name="model">student.semester</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>					
					<sheet>
						<div class="oe_button_box" name="my_button_box">
                            <button name="" type="" class="oe_stat_button" icon="fa-star">
                            	<field name="total_score" string="Total Score" widget="statinfo"/>
                            </button>                            
                        </div>
						<group string="Basic Information">
							<group>
								<field name="student_id"/>
								<field name="academic_status" readonly="1"/>
							</group>
							<group>
								<field name="semester_id"/>
							</group>
						</group>
						<group string="Behavior Point Information">
							<group>
								<field name="learning_score"/>
								<field name="school_score"/>
								<field name="social_score"/>
							</group>
							<group>
								<field name="activity_score"/>
								<field name="leading_score"/>
								<field name="discipline_score"/>								
							</group>
						</group>					
					</sheet>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="student_semester_behavior_point_main_action">
			<field name="name">Behavior Point System</field>
			<field name="res_model">student.semester</field>
			<field name="view_mode">tree,form</field>
		</record>
		<record model="ir.actions.act_window.view" id="student_semester_behavior_main_tree_view">
			<field name="sequence" eval="1"/>
			<field name="name">Student Behavior Point</field>
			<field name="res_model">student.semester</field>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="student_semester_behavior_point_tree_view"/>
			<field name="act_window_id" ref="student_semester_behavior_point_main_action"/>
		</record>
		<record model="ir.actions.act_window.view" id="student_semester_behavior_main_form_view">
			<field name="sequence" eval="2"/>
			<field name="name">Behavior Point</field>
			<field name="res_model">student.semester</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="student_semester_behavior_point_form_view"/>
			<field name="act_window_id" ref="student_semester_behavior_point_main_action"/>
		</record>
		<!-- Search View -->
		<!--<record id="" model="ir.ui.view">
			<field name="name"></field>
			<field name="model"></field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Search">
					Search By
					
					Group By
					<group expand="0" string="Group By">
					</group>
				</search>
			</field>
		</record>-->
	</data>
</openerp>