<?xml version="1.0" ?>
<openerp>
	<data>
		<record model="ir.actions.act_window" id="course_registration_main_action">
			<field name="name">Course Registration</field>
			<field name="res_model">course.registration</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<record id="course_registration_tree_view" model="ir.ui.view">
			<field name="name">Registration</field>
			<field name="model">course.registration</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="reg_semester_id"/>
					<field name="year_batch_id"/>
					<field name="start_datetime"/>
					<field name="end_datetime"/>
					<field name="drop_deadline_datetime"/>					
					<field name="min_credits" string="Min. Credits"/>
					<field name="max_credits" string="Max Credits"/>
				</tree>
			</field>
		</record>
		
		<record id="course_registration_form_view" model="ir.ui.view">
			<field name="name">Registration</field>
			<field name="model">course.registration</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Name"/>
                            <h1>
                            	<field name="name" class="oe_inline" style="width:90%%"/>
                            </h1>
                        </div>
                        <group string="Basic Information">
                        	<group>
                        		<field name="reg_semester_id" options="{'no_create':True}"/>
                        		<field name="year_batch_id" options="{'no_create':True}"/>
                        		<field name="min_credits"/>
                        		<field name="max_credits"/>
                        	</group>
                        	<group>
                        		<field name="start_datetime"/>
                        		<field name="end_datetime"/>
                        		<field name="drop_deadline_datetime"/>
                        	</group>
                        </group>
                        <!-- <group string="Course List">
                        	<field name="offer_course_ids" nolabel="1" context="{'semester_id':reg_semester_id}"/>
                        	<field name="offer_course_ids" nolabel="1" domain="[('semester_id','=',reg_semester_id)]" options="{'no_create':True}"/>
                        </group> -->
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Search View -->
		<record id="course_registration_search_view" model="ir.ui.view">
			<field name="name">Search View</field>
			<field name="model">course.registration</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search>
					<!-- Search By -->
					<field name="name"/>
					<field name="max_credits"/>
					<!-- Group By -->
					<group expand="0" string="Group By">
						<filter name="group_by_semester" string="Semester"
							context="{'group_by':'reg_semester_id'}"/>
						<filter name="group_by_year_batch" string="Year Batch"
							context="{'group_by':'year_batch_id'}"/>
						<filter name="group_by_max_credits" string="Max Credits"
							cotext="{'group_by':'max_credits'}"/>						
					</group>
					
					<!-- Filter By -->
				</search>
			</field>
		</record>
	</data>
</openerp>