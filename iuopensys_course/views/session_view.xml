<?xml version="1.0" ?>
<openerp>
	<data>
		<record model="ir.actions.act_window" id="session_main_action">
			<field name="name">Session List</field>
			<field name="res_model">session</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<record id="session_main_tree_view" model="ir.ui.view">
			<field name="name">Session List</field>
			<field name="model">session</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="offer_course_id"/>
					<field name="start_date"/>
					<field name="end_date"/>
					<field name="start_time" widget="float_time"/>
					<field name="end_time" widget="float_time"/>
					<field name="duration" widget="float_time"/>
				</tree>
			</field>
		</record>
		
		<record id="session_main_form_view" model="ir.ui.view">
			<field name="name">Session</field>
			<field name="model">session</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Session Name"/>
                            <h1>
                            	<field name="name" required="1" class="oe_inline"/>
                            </h1>                            
                        </div>
                        <group colspan="4">
                        	<group string="Basic Information">
                        		<group>
                        			<field name="offer_course_id"/>
                        			<field name="start_date"/>
                        			<field name="end_date"/>
                        			<field name="is_summer"/>
                        		</group>
                        		<group>
                        			<field name="start_time" widget="float_time"/>
                        			<field name="end_time" widget="float_time"/>
                        			<field name="duration" widget="float_time"/>                        			                     			
                        		</group>
                        	</group>
                        </group>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Search View -->
		<!-- <record id="" model="ir.ui.view">
			<field name="name"></field>
			<field name="model"></field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search>
					Search By
					
					Group By
				</search>
			</field>
		</record> -->
	</data>
</openerp>