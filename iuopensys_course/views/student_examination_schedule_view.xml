<?xml version="1.0" ?>
<openerp>
	<data>
		<record model="ir.actions.act_window" id="student_examination_schedule_main_action">
			<field name="name">Examination Schedules</field>
			<field name="res_model">student.examination.schedule</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<record id="student_examination_schedule_tree_view" model="ir.ui.view">
			<field name="name">Examination Schedules</field>
			<field name="model">student.examination.schedule</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="exam_type"/>
					<field name="semester_id"/>
					<field name="student_id"/>													
				</tree>
			</field>
		</record>
		
		<record id="student_examination_schedule_form_view" model="ir.ui.view">
			<field name="name">Schedule</field>
			<field name="model">student.examination.schedule</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>					
					<sheet>
						<div class="oe_title">
							<h1><field name="name" nolabel="1" readonly="1"/></h1>
						</div>						
						<group>
							<group>
								<field name="student_id"/>
								<field name="exam_status"/>
							</group>
							<group>
								<field name="semester_id"/>
								<field name="exam_type"/>
							</group>
						</group>	
						<group string="Schedule" attrs="{'invisible':[('exam_type','=','final')]}">
							<field name="student_course_midterm_ids" nolabel="1">
								<tree edit="false" create="false" delete="false">
									<!-- <field name="course_code"/> -->
									<field name="offer_course_id" string="Course"/>
									<field name="display_exam_date_midterm"/>
          							<field name="display_exam_time_midterm" />
          							<field name="display_duration_midterm" />
          							<field name="display_room_midterm" />
								</tree>
							</field>
						</group>
						<group string="Schedule" attrs="{'invisible':[('exam_type','=','mid')]}">
							<field name="student_course_final_ids" nolabel="1">
								<tree edit="false" create="false" delete="false">
									<!-- <field name="course_code"/> -->
									<field name="offer_course_id" string="Course"/>
          							<field name="display_exam_date_final"/>
          							<field name="display_exam_time_final"/>
          							<field name="display_duration_final"/>
          							<field name="display_room_final"/>
								</tree>
							</field>
						</group>					
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Search View -->
		<!--<record id="" model="ir.ui.view">
			<field name="name"></field>
			<field name="model"></field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search string="Search">
					Search By
					
					Group By
					<group expand="0" string="Group By">
					</group>
				</search>
			</field>
		</record>-->
	</data>
</openerp>