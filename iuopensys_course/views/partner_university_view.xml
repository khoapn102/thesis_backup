<?xml version="1.0" ?>
<openerp>
	<data>
		<record model="ir.actions.act_window" id="partner_university_main_action">
			<field name="name">Partner Universities</field>
			<field name="res_model">partner.university</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<record id="partner_university_tree_view" model="ir.ui.view">
			<field name="name">Partner Universities</field>
			<field name="model">partner.university</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="country_id"/>
					<field name="school_code"/>							
				</tree>
			</field>
		</record>
		
		<record id="partner_university_form_view" model="ir.ui.view">
			<field name="name">University</field>
			<field name="model">partner.university</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>					
					<sheet>
						<div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Course Name"/>
                            <h1>
                            	<field name="name" required="1" class="oe_inline" style="width:90%%"/>
                            </h1>
                        </div>
                        <group>
                        	<group>
                        		<field name="school_code"/>                      		
                        	</group>
                        	<group>
                        		<field name="uni_address"/>
                        		<field name="country_id"/>
                        	</group>
                        </group>					
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Search View -->
		<record id="" model="ir.ui.view">
			<field name="name"></field>
			<field name="model"></field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search>
					<!--Search By -->
					
					<!--Group By -->
				</search>
			</field>
		</record>
	</data>
</openerp>