<?xml version="1.0" ?>
<openerp>
	<data>
		<record model="ir.actions.act_window" id="iu_curriculum_main_action">
			<field name="name">List All Curriculums</field>
			<field name="res_model">iu.curriculum</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<record id="iu_curriculum_tree_view" model="ir.ui.view">
			<field name="name">List All Curriculums</field>
			<field name="model">iu.curriculum</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="department_id"/>
					<field name="max_cred_require" string="Max Crds. Req"/>
					<field name="total_cred" string="Total Crds."/>
					<field name="note"/>
				</tree>
			</field>
		</record>
		
		<record id="iu_curriculum_form_view" model="ir.ui.view">
			<field name="name">Curriculum</field>
			<field name="model">iu.curriculum</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>					
					<sheet>
						<div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Curriculum Name"/>
                            <h1>
                            	<field name="name" required="1" class="oe_inline" style="width:90%%"/>
                            </h1>
                        </div>
                        <group string="Basic Information">
                        	<group>
                        		<field name="department_id"/>
                        		<field name="max_cred_require"/>
                        	</group>
                        	<group>
                        		<field name="is_eng_req"/>
                        		<field name="note"/>
                        	</group>
                        </group>
                        <group string="Course List"> 
                        	<field name="course_ids" nolabel="1">
                        		<tree edit="false">
                        			<field name="name"/>
                        			<field name="department_id"/>
                        			<field name="number_credits"/>
                        			<field name="number_credits_actual"/>
                        			<field name="prereq_course_id"/>
                        			<field name="crs_lang"/>
                        		</tree>
                        	</field>
                        </group>						
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Search View -->
		<record id="iu_curriculum_search_view" model="ir.ui.view">
			<field name="name">Search View</field>
			<field name="model">iu.curriculum</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search>
					<!--Search By -->
					<field name="name"/>
					
					<!--Group By -->
					<group expand="0" string="Group By">
						<filter string="Department" 
							context="{'group_by':'department_id'}"/>
						<filter string="Require English"
							context="{'group_by':'is_eng_req'}"/>
					</group>
				</search>
			</field>
		</record>
	</data>
</openerp>