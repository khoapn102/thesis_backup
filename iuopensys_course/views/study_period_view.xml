<?xml version="1.0" ?>
<openerp>
	<data>
		<record model="ir.actions.act_window" id="study_period_main_action">
			<field name="name">Schedules</field>
			<field name="res_model">study.period</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{'group_by':'offer_course_id'}</field>
		</record>
		
		<record id="study_period_main_tree_view" model="ir.ui.view">
			<field name="name">Study Periods</field>
			<field name="model">study.period</field>
			<field name="type">tree</field>			
			<field name="arch" type="xml">
				<tree>
					<field name="offer_course_id"/>
					<field name="name"/>
					<field name="crs_day"/>										
					<field name="start_date"/>
					<field name="end_date"/>
					<field name="study_period_start"/>
					<field name="amount_period"/>
					<field name="start_time" widget="float_time"/>
					<field name="end_time" widget="float_time"/>
					<field name="duration" widget="float_time"/>
					<field name="is_recurrency"/>
					<field name="is_summer"/>
					<field name="is_exam"/>
					<field name="time_start_morning" invisible="1"/>
					<field name="time_start_afternoon" invisible="1"/>
					<field name="default_period_length" invisible="1"/>
				</tree>
			</field>
		</record>
		
		<record id="study_period_main_form_view" model="ir.ui.view">
			<field name="name">Period</field>
			<field name="model">study.period</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Session Name"/>
                            <h1>
                            	<field name="name" required="1" class="oe_inline"/>
                            </h1>                            
                        </div>
                        <group colspan="4">
                        	<group string="Basic Information">
                        		<group>
                        			<field name="offer_course_id"/>
                        			<field name="crs_day"/>
                        			<field name="start_date"/>                        			
                        			<field name="end_date"/>
                        			<field name="is_recurrency"/>
                        			<field name="is_exam"/>
                        			<field name="exam_type" attrs="{'invisible': [('is_exam','=',False)]}"/>
                        			<field name="time_start_morning" invisible="1"/>
                        			<field name="time_start_afternoon" invisible="1"/>
									<field name="default_period_length" invisible="1"/>                      			
                        		</group>
                        		<group>
                        			<field name="study_period_start"/>
                        			<field name="amount_period"/>                     			
                        			<field name="start_time" widget="float_time"/>
                        			<field name="end_time" widget="float_time"/>
                        			<field name="duration" widget="float_time"/> 
                        			<field name="exam_room" attrs="{'invisible': [('is_exam','=',False)]}"/>               			
                        			<field name="is_summer"/>
                        			
                        		</group>
                        	</group>
                        </group>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Calendar View -->
		<!-- <record id="calendar_study_period" model="ir.ui.view">
			<field name="model">study.period</field>
			<field name="arch" type="xml">
				<calendar date_start="start_datetime" date_stop="end_datetime" color="offer_course_id">
					<field name="name"/>
					<field name="offer_course_id"/>
				</calendar>
			</field>
		</record> -->
		
		<!-- Search View -->
		<record id="study_period_search_view" model="ir.ui.view">
			<field name="name">Search</field>
			<field name="model">study.period</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search>
					<!-- Search By -->
					<field name="name"/>					
					
					<!-- Group By -->
					<group expand="0" string="Group By">
						<filter name="group_by_course" string="Course"
							context="{'group_by':'offer_course_id'}"/>
						<filter string="Start Date"
							context="{'group_by':'start_date'}"/>
						<filter string="End Date"
							context="{'group_by':'end_date'}"/>
						<filter string="Exam"
							context="{'group_by':'is_exam'}"/>
						<filter string="Exam Type"
							context="{'group_by':'exam_type'}"/>
						<filter string="Starting Period"
							context="{'group_by':'study_period_start'}"/>
						<filter string="Amount Period"
							context="{'group_by':'amount_period'}"/>						
						<filter string="Proctor One"
							context="{'group_by':'proctor_one_id'}"/>
						<filter string="Proctor Two"	
							context="{'group_by':'proctor_two_id'}"/>
					</group>
					
				</search>
			</field>
		</record>
	</data>
</openerp>