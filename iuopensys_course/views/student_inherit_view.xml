<?xml version="1.0" ?>
<openerp>
	<data>
		<record id="student_main_form_view_inherit" model="ir.ui.view">
			<field name="name">student.form.view.inherit</field>
			<field name="model">student</field>
			<field name="inherit_id" ref="iuopensys_core.student_main_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//div[1]" position="inside">
					<button string="Balance Update"
						class="oe_stat_button"
						icon="fa-print"
						type="action"
						name="%(iuopensys_course.student_balance_update_wizard_action)d"
						context="{'default_student_id':active_id}"
						groups="iuopensys_core.group_staff"/>
				</xpath>
				<notebook position="inside">
					<page string="Academic Info">
						<group string="General Information">
							<group>
								<field name="std_academic_prog_id"/>
								<field name="standard_grad_date"/>
							</group>
							<group>
								<field name="max_grad_date"/>
							</group>							
						</group>
						<group string="Other Information" groups="iuopensys_core.group_staff">
	                    	<field name="exam_status"/>
						</group>
					</page>
					<page string="Transcript">
						<notebook>
							<page string="Semester Transcript">
								<field name="student_semester_ids" nolabel="1">
									<tree edit="false" create="false">
										<field name="semester_id"/>
										<field name="total_credits"/>
										<field name="achieved_credits"/>
										<field name="no_count_credits"/>
										<field name="average_gpa"/>
									</tree>
								</field>
							</page>
							<page string="Academic Transcript">
								<group string="Transcript">
									<group>
										<group>
											<field name="accumulated_gpa"/>
										</group>
										<group>
											<field name="accumulated_credits"/>
										</group>
									</group>
		               			</group>
		               			<group>
									<field name="student_course_ids" nolabel="1">
		               					<tree edit="false" create="false" delete="false">               						
		               						<field name="course_code" string="Code" fg_color="red:letter_grade in ['F']"/>
		               						<field name="course_name" fg_color="red:letter_grade in ['F']"/>
		               						<field name="course_credits" string="Crds" fg_color="red:letter_grade in ['F']"/>
		               						<field name="semester_id" fg_color="red:letter_grade in ['F']"/>
		               						<field name="assignment_percent" fg_color="red:letter_grade in ['F']"/>
		               						<field name="mid_exam_percent" fg_color="red:letter_grade in ['F']"/>
		               						<field name="final_exam_percent" fg_color="red:letter_grade in ['F']"/>
		               						<field name="assignment_score" string="Assignment" fg_color="red:letter_grade in ['F']"/>               						
		               						<field name="mid_score" string="Midterm" fg_color="red:letter_grade in ['F']"/>
		               						<field name="final_score" string="Final" fg_color="red:letter_grade in ['F']"/>
		               						<field name="course_gpa" string="Crs GPA" fg_color="red:letter_grade in ['F']"/>
		               						<field name="letter_grade" string="Letter Grd" fg_color="red:letter_grade in ['F']"/>
		               					</tree>
		               				</field>
								</group>
							</page>
							<page string="Scholarships">
								<group>
									<field name="student_financial_aid_ids" nolabel="1">
										<tree create="false" delete="false">
											<field name="student_id"/>
											<field name="financial_aid_id"/>
											<field name="is_active"/>
											<button name="set_is_active" type="object" string="Active/Inactive" groups="iuopensys_core.group_staff"/>
										</tree>
									</field>
								</group>
							</page>
						</notebook>               			
               		</page>
               		<page string="Behavior Point">
               			<group string="Semester List">
               				<field name="behavior_point_semester_ids" nolabel="1">
               					<tree edit="false" create="false" delete="false">
               						<field name="semester_id"/>
               						<field name="learning_score"/>
               						<field name="school_score"/>
               						<field name="social_score"/>
               						<field name="activity_score"/>
               						<field name="leading_score"/>
               						<field name="discipline_score"/>
               						<field name="total_score"/>
               					</tree>
               				</field>
               			</group>
               		</page>
               		<page string="Finance Info">
               			<group string="General Information">
               				<group>
								<label for="student_balance"  style="font-weight:bold"/>
	                    		<div>
	                				<field name="student_balance" class="oe_inline"/>
	                				<span> USD</span>
	                    		</div>	                    		
							</group>
							<group>
								<label for="student_debt"  style="font-weight:bold"/>
	                    		<div>
	                				<field name="student_debt" class="oe_inline"/>
	                				<span> USD</span>
	                    		</div>
							</group>
               			</group>
               			<group colspan="4">
							<field name="tuition_discount_time" invisible="1"/>
							<field name="payment_note" attrs="{'invisible':[('tuition_discount_time','==', 0)]}"/>
						</group>
               			<group string="Tution Information" groups="iuopensys_core.group_staff">
               				<field name="student_tuition_ids" nolabel="1">
               					<tree create="false">
               						<field name="semester_id"/>
               						<field name="amount_tuition"/>
               						<field name="amount_financial_aid"/>	
               						<field name="amount_must_pay"/>
               						<field name="amount_paid"/>
               						<field name="amount_leftover"/>
               					</tree>
               				</field>
               			</group>
               		</page>
               		<page string="Documents">
               			<notebook>
               				<page string="Uncompleted Documents">
               					<group>
               						<field name="student_document_not_submit_ids" nolabel="1">
               							<tree edit="false">
               								<field name="name"/>
               								<field name="doc_type"/>
               								<field name="submit_deadline"/>
               								<field name="note"/>
               								<field name="is_optional"/>
               							</tree>
               						</field>
               					</group>
               				</page>
               				<page string="Submitted Documents">
               					<group string="Document List">
		               				<field name="student_document_ids" nolabel="1">
		               					<tree edit="false" create="false">
		               						<field name="iu_doc_id"/>
		               						<field name="is_submit"/>
		               						<field name="is_stored"/>
		               						<field name="submit_deadline"/>
		               					</tree>
		               				</field>
		               			</group>
               				</page>
               			</notebook>
               			
               		</page>               		
				</notebook>
			
				<!-- <xpath expr="//field[@name='studentId']" position="after">
					<field name="student_balance" invisible="1"/>
				</xpath> -->
				<xpath expr="//field[@name='student_class_code']" position="after">
					<field name="academic_status"/>
					<field name="financial_aid_id"/>
				</xpath>
			</field>
		</record>
	</data>
</openerp>