<?xml version="1.0" ?>
<openerp>
	<data>
		<record id="student_main_form_view_inherit" model="ir.ui.view">
			<field name="name">student.form.view.inherit</field>
			<field name="model">student</field>
			<field name="inherit_id" ref="iuopensys_core.student_main_form_view"/>
			<field name="arch" type="xml">
				<notebook position="inside">
					<page string="Academic Info I">
						<group string="General Information">
							<group>
								<field name="std_academic_prog_id"/>
								<field name="standard_grad_date"/>
								<field name="max_grad_date"/>
							</group>
							<group>
								<field name="is_eng_req"/>							
								<field name="eng_curriculum_id" attrs="{'invisible':[('is_eng_req','=',False)]}"
										domain="[('is_eng_req','=',True)]"/>
								<field name="is_eng_complete" attrs="{'invisible':[('eng_curriculum_id','=',False)]}"/>/>
							</group>							
						</group>
						<group string="Other Information">
	                    	<field name="exam_status"/>
						</group>
					</page>
					<page string="Academic Info II">
               			<group colspan="4" id="academic_group" string="Academic Transcript">
               				<field name="student_course_ids" nolabel="1">
               					<tree edit="false" create="false" delete="false">               						
               						<field name="course_code" string="Code"/>
               						<field name="course_name"/>
               						<field name="course_credits" string="Crds"/>
               						<field name="semester_id"/>
               						<field name="assignment_percent"/>
               						<field name="mid_exam_percent"/>
               						<field name="final_exam_percent"/>
               						<field name="assignment_score" string="Assignment"/>               						
               						<field name="mid_score" string="Midterm"/>
               						<field name="final_score" string="Final"/>
               						<field name="course_gpa" string="Crs GPA"/>
               						<field name="letter_grade" string="Letter Grd"/>
               					</tree>
               				</field>
               			</group>
               		</page>
               		<page string="Behavior Point">
               			<group string="Semester List">
               				<field name="student_behavior_point_ids" nolabel="1"
               					context="{'default_student_id':active_id}">
               					<tree editable="bottom">
               						<field name="semester_id"/>
               						<field name="learning_score"/>
               						<field name="school_score"/>
               						<field name="social_score"/>
               						<field name="activity_score"/>
               						<field name="leading_score"/>
               						<field name="discipline_score"/>
               						<field name="total_score"/>
               					</tree>
               				</field>
               			</group>
               		</page>
               		<page string="Finance Info">
               			<group string="General Information">
               				<group>
								<label for="student_balance"  style="font-weight:bold"/>
	                    		<div>
	                				<field name="student_balance" class="oe_inline"/>
	                				<span> USD</span>
	                    		</div>
							</group>
							<group>
								<label for="student_debt"  style="font-weight:bold"/>
	                    		<div>
	                				<field name="student_debt" class="oe_inline"/>
	                				<span> USD</span>
	                    		</div>
							</group>
               			</group>
               			<group string="Tution Information">
               				<field name="student_tuition_ids" nolabel="1">
               					<tree create="false" edit="false">
               						<field name="semester_id"/>
               						<field name="amount_tuition"/>
               						<field name="amount_financial_aid"/>	
               						<field name="amount_must_pay"/>
               						<field name="amount_paid"/>
               						<field name="amount_leftover"/>
               					</tree>
               				</field>
               			</group>
               		</page>
               		<page string="Documents">
               			<group string="Document List">
               				<field name="student_document_ids" nolabel="1">
               					<tree edit="false" create="false">
               						<field name="iu_doc_id"/>
               						<field name="is_submit"/>
               						<field name="is_stored"/>
               						<field name="submit_deadline"/>
               					</tree>
               				</field>
               			</group>
               		</page>               		
				</notebook>
				<xpath expr="//field[@name='academic_year_id']" position="after">
					<field name="year_batch_id"/>
				</xpath>
				<xpath expr="//field[@name='studentId']" position="after">
					<field name="student_balance" invisible="1"/>
				</xpath>
				<xpath expr="//field[@name='student_class_code']" position="after">
					<field name="academic_status"/>
					<field name="financial_aid_id"/>
				</xpath>
			</field>
		</record>
	</data>
</openerp>