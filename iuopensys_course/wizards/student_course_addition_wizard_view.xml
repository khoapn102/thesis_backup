<?xml version="1.0" ?>
<openerp>
	<data>
		<record model="ir.actions.act_window" id="student_course_addition_wizard_action">
			<field name="name">Add Students</field>
			<field name="res_model">student.course.addition.wizard</field>
			<field name="view_mode">form</field>
			<field name="view_type">form</field>
			<field name="target">new</field>
		</record>
		
		<record id="student_course_addition_wizard_form_view" model="ir.ui.view">
			<field name="name">Add Students</field>
			<field name="model">student.course.addition.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>					
					<sheet>
						<group>
							<group>
								<field name="offer_course_id"/>
							</group>
						</group>	
						<group>
							<field name="year_batch_id"/>
						</group>
						<group>
							<field name="student_ids"/>
						</group>					
					</sheet>
					<footer>
						<button name="add_student_to_course"
							type="object"
							class="btn-primary"
							string="Confirm"/>
						or
						<button string="Cancel"
							class="btn-default"
							special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

	</data>
</openerp>